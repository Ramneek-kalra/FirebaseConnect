<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textStyle="bold"
        android:text="DATA FETCHER!"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/DataFetchHead"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/DataFetchHead"
        android:id="@+id/SearchText"
        android:textSize="20dp"
        android:hint="Enter Name here to Search..."
        />

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/SearchText"
        app:cardCornerRadius="10dp"
        android:id="@+id/cardLay"
        android:layout_centerInParent="true"
        android:elevation="1dp"
        android:layout_margin="20dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:id="@+id/firstLay"
            android:layout_margin="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Name:"
                />
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/uName_search"
                android:enabled="false"
                android:textSize="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/DegreeList"
                android:text="Degree of Course:"
                />
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/uDegree_search"
                android:enabled="false"
                android:textSize="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/ClassSelect"
                android:text="Class:"
                />
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/uClass_search"
                android:enabled="false"
                android:textSize="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Address:"
                />
            <EditText
                android:layout_width="200dp"
                android:enabled="false"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:maxLength="100"
                android:id="@+id/uAddress_search"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@android:drawable/ic_menu_search"
        android:layout_toRightOf="@id/SearchText"
        android:layout_below="@id/DataFetchHead"
        style="@style/Base.Theme.AppCompat.Light.DarkActionBar"
        android:id="@+id/buttonCloud_search"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
